<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgCvAlumni"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imgProfileAlumni"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="@+id/imgCvAlumni"
        app:layout_constraintTop_toBottomOf="@+id/imgCvAlumni" />

    <TextView
        android:id="@+id/tvNamaAlumni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Alumni"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgProfileAlumni"
        app:layout_constraintEnd_toEndOf="@+id/imgCvAlumni"
        app:layout_constraintStart_toEndOf="@+id/imgProfileAlumni"
        app:layout_constraintTop_toTopOf="@+id/imgProfileAlumni" />

</androidx.constraintlayout.widget.ConstraintLayout>